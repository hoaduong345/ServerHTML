<form action="/product/updateSP/{{itemProduct._id}}" method="POST" enctype="multipart/form-data">

    <div class="justify-content-center align-items-center">
        <div class="d-flex justify-content-center align-items-center ">
            <h3>Sửa sản phẩm</h3>
        </div>
        {{!-- <input type="text" name="Tensp"> --}}

        <div class="mb-3">
            <div class="mb-3">
                <input type="hidden" name="id" value="{{itemProduct._id}}" />
            </div>

            <label for="nameProducts" class="form-label">Tên sản phẩm</label>
            <input type="input" class="form-control rounded-pill border border-dark" value="{{itemProduct.Tensp}}"
                name="Tensp" required>
        </div>
        <div class="mb-3">
            <label for="quantityProducts" class="form-label">Số lượng</label>
            <input type="text" class="form-control rounded-pill border border-dark" name="Soluong"
                value="{{itemProduct.Soluong}}">
        </div>
        <div class="mb-3">
            <label for="priceProducts" class="form-label">Giá</label>
            <input type="text" class="form-control rounded-pill border border-dark" name="Gia"
                value="{{itemProduct.Gia}}">
        </div>
        <div class="mb-3">
            <label for="discountProducts" class="form-label">Giảm giá</label>
            <input type="text" class="form-control rounded-pill border border-dark" name="Giamgia"
                value="{{itemProduct.Giamgia}}">
        </div>
        <div class="mb-3">
            <label class="form-label" for="categoryProducts">Danh mục</label>
            <select class="form-select rounded-pill border border-dark" name="Danhmuc" value="{{itemProduct.Danhmuc}}">
                <option selected>Lựa chọn...</option>
                <option value="1">Quần Dài</option>
                <option value="2">Giày dép</option>
                <option value="3">Balo-Túi</option>
                <option value="4">Phụ kiện</option>
                <option value="5">Quần Short</option>

            </select>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Hình ảnh</label>
            <input class="form-control" type="file" name="Hinhanh" value="{{itemProduct.Hinhanh}}" multiple>
        </div>
        <textarea class="form-control" id="validationTextarea" name="MieuTa" placeholder="Chi tiết sản phẩm">
        </textarea>

        <div class="row">
            <button type="submit" class="btn btn-primary justify-content-center" style="padding: 10px;">Xác Nhận
            </button>
        </div>
    </div>
</form>