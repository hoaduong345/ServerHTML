<div class="row justify-content-center align-items-center">
  <form action="/product/uploadsp" method="POST" enctype="multipart/form-data" class="w-75 needs-validation" novalidate>
    <div class="d-flex justify-content-center align-items-center ">
      <h3>Thêm sản phẩm</h3>
    </div>
    {{!-- <input type="text" name="Tensp"> --}}

    <div class="mb-3">
      <div class="mb-3">
        <input type="hidden" name="id" />
      </div>
      <label for="nameProducts" class="form-label">Tên sản phẩm</label>
      <input type="text" class="form-control rounded-pill border border-dark" name="Tensp" required>
    </div>
    <div class="mb-3">
      <label for="quantityProducts" class="form-label">Số lượng</label>
      <input type="number" class="form-control rounded-pill border border-dark" name="Soluong" required>
    </div>
    <div class="mb-3">
      <label for="priceProducts" class="form-label">Giá</label>
      <input type="number" class="form-control rounded-pill border border-dark" name="Gia" required>
    </div>
    <div class="mb-3">
      <label for="discountProducts" class="form-label">Giảm giá</label>
      <input type="number" class="form-control rounded-pill border border-dark" name="Giamgia" required>
    </div>
    <div class="mb-3">
      <label class="form-label" for="categoryProducts">Danh mục</label>
      <select class="form-select rounded-pill border border-dark" name="Danhmuc" required>
        <option selected>Lựa chọn...</option>
        <option value="1">Quần Dài</option>
        <option value="2">Giày dép</option>
        <option value="3">Balo-Túi</option>
        <option value="4">Phụ kiện</option>
        <option value="5">Quần Short</option>

      </select>
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Hình ảnh</label>
      <input class="form-control" type="file" name="Hinhanh" multiple required>
    </div>
    <textarea class="form-control" id="validationTextarea" name="MieuTa" placeholder="Chi tiết sản phẩm"
      required></textarea>
    <div class="invalid-feedback">
      chi tiet san pham
    </div>
    <div class="row">
      <button type="submit" class="btn btn-primary justify-content-center" style="padding: 10px;">Thêm sản phẩm</button>
    </div>

  </form>
</div>